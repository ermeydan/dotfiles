syntax enable
set number
set relativenumber
set autowrite
set hidden
set nowrap
set expandtab
set shiftwidth=2
set ignorecase
set smartcase
set cursorline
set splitright
set splitbelow
set noswapfile
set undofile

set undodir=~/.cache/nvim/temp/undodir
set clipboard=unnamedplus

set updatetime=100

set termguicolors
set background=dark
colorscheme solarized8

let g:python_host_prog  = '/usr/bin/python'
let g:python3_host_prog = '/usr/bin/python3'
